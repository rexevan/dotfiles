# i3 config file (v4)
# Jangan lupa untuk :set ft = i3config
# Pakai juga xev untuk lihat tombol keyboard
# Referensi : https://i3wm.org/docs/userguide.html
# $m = Alt, Mod4 = Win, $w = Win

set $m Mod1

font pango:System San Francisco 10

# the arrows is not convenient
set $left h
set $down j
set $up k
set $right l

# use Mouse+$m to drag floating windows to their wanted position
floating_modifier $m

#### Open a Program ####
set $term urxvt
set $browser firefox
set $music urxvt -e mocp -T ~/.moc/themes/hybrid-bright
set $explorer urxvt -e ranger
set $launcher rofi -show run

bindsym $m+Return exec $term
bindsym $m+e exec $explorer
bindsym $m+m exec $music
bindsym XF86HomePage exec $browser
bindsym $m+d exec $launcher

#### Always On Program ####
set $wallpaper /home/rexevan/Gambar/Wallpapers/ryuko-minimal.png

exec_always compton 			# Transparansi
exec_always feh --bg-scale $wallpaper	# Wallpaper
exec_always nm-applet			# Wifi dan Konektivitas

#### Shorcut Keys ####

# Keluar dari Program
bindsym $m+Super_L kill

# Kunci Layar
set $screenlock i3lock
bindsym $m+shift+x exec $screenlock

#ScreenShot / Print Screen
set $screenshot scrot 'screenshot_%Y%m%d_%H%M%S.png' -e 'mkdir -p ~/Gambar/screenshots && mv $f ~/Gambar/screenshots && xclip -selection clipboard -t image/png -i ~/Gambar/screenshots/`ls -1 -t ~/Gambar/screenshots | head -1`'

bindsym --release Print exec $screenshot

# Kecerahan Layar
set $lightUp xbacklight -inc 10
set $lightDown xbacklight -dec 10
set $lightUp light -A 10
set $lightDown light -U 10

bindsym XF86MonBrightnessUp   exec $lightUp
bindsym XF86MonBrightnessDown exec $lightDown

# Suara / Volume - belum bekerja
set $volumeUp   pactl set-sink-volume 0 +5%
set $volumeDown pactl set-sink-volume 0 -5%
set $mute 	pactl set-sink-mute 0 toggle

bindsym XF86AudioRaiseVolume exec --no-startup-id $volumeUp
bindsym XF86AudioLowerVolume exec --no-startup-id $volumeDown
bindsym XF86AudioMute exec --no-startup-id $mute

# VLC Control
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

#### i3 Window ####

# change focus
bindsym $m+$left focus left
bindsym $m+$down focus down
bindsym $m+$up focus up
bindsym $m+$right focus right

bindsym $m+Left focus left
bindsym $m+Down focus down
bindsym $m+Up focus up
bindsym $m+Right focus right

# move focused window
bindsym $m+Shift+$left move left
bindsym $m+Shift+$down move down
bindsym $m+Shift+$up move up
bindsym $m+Shift+$right move right

bindsym $m+Shift+Left move left
bindsym $m+Shift+Down move down
bindsym $m+Shift+Up move up
bindsym $m+Shift+Right move right

# split in horizontal orientation
bindsym $m+slash split h

# split in vertical orientation
bindsym $m+v split v

# enter fullscreen mode for the focused container
bindsym $m+f fullscreen toggle

# resize window (you can also use the mouse for that)
mode "resize" {
        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym $left       resize shrink width 5 px or 5 ppt
        bindsym $down       resize grow height 5 px or 5 ppt
        bindsym $up         resize shrink height 5 px or 5 ppt
        bindsym $right      resize grow width 5 px or 5 ppt

        # same bindings, but for the arrow keys
        bindsym Left        resize shrink width 5 px or 5 ppt
        bindsym Down        resize grow height 5 px or 5 ppt
        bindsym Up          resize shrink height 5 px or 5 ppt
        bindsym Right       resize grow width 5 px or 5 ppt

        # back to normal: Enter or Escape or $m+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $m+r mode "default"
}

bindsym $m+r mode "resize"

